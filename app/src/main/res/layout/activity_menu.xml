<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="skundapatrik.pozornatriky.Menu">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pozadie"
        android:id="@+id/pozadie" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_meno"
            android:src="@drawable/button_meno"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_menu_meno"
            android:id="@+id/text_menu_meno"
            android:layout_marginStart="14dp"
            android:layout_alignBottom="@+id/button_meno"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_menu_hudba"
            android:src="@drawable/music_on"
            android:background="@android:color/transparent"
            android:layout_toLeftOf="@+id/button_menu_zvuk"
            android:layout_toStartOf="@+id/button_menu_zvuk"
            android:visibility="invisible" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_menu_hudba_off"
            android:src="@drawable/music_off"
            android:background="@android:color/transparent"
            android:layout_toLeftOf="@+id/button_menu_zvuk"
            android:layout_toStartOf="@+id/button_menu_zvuk"
            android:visibility="invisible" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_menu_zvuk"
            android:src="@drawable/sound_on"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_menu_zvuk_off"
            android:src="@drawable/sound_off"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_menu_skore"
            android:layout_marginRight="21dp"
            android:src="@drawable/table"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_menu_nastavenia"
            android:layout_alignParentBottom="true"
            android:src="@drawable/setting"
            android:background="@android:color/transparent"
            android:layout_alignEnd="@+id/button_menu_zvuk" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_menu_play"
            android:src="@drawable/button_play"
            android:background="@android:color/transparent"
            android:layout_above="@+id/button_menu_nastavenia"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PomÅ¯cka"
            android:id="@+id/pomocka"
            android:singleLine="false"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/button_menu_play" />

    </RelativeLayout>

</RelativeLayout>
